<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="false">
		<layer-list>
			<item android:right="5dp" android:left="5dp">
				<shape>
					<corners android:radius="0dp"/>
					<solid android:color="#e2da55"/>
				</shape>
			</item>

			<item android:right="2dp" android:left="2dp">
				<shape>
					<corners android:radius="10dp"/>
					<stroke android:width="3dp" android:color="#000000"/>
					<gradient android:angle="270"  android:endColor="#E2DA55" android:startColor="#E2DA55"/>
					<padding android:top="10dp" android:bottom="10dp" android:left="10dp" android:right="10dp"/>
				</shape>
			</item>
		</layer-list>
	</item>

	<item android:state_pressed="true">
		<layer-list>
			<item android:right="5dp" android:left="5dp">
				<shape>
					<corners android:radius="0dp"/>
					<solid android:color="#e2da55"/>
				</shape>
			</item>

			<item android:right="2dp" android:left="2dp">
				<shape>
					<corners android:radius="10dp"/>
					<stroke android:width="3dp" android:color="#000000"/>
					<gradient android:angle="270" android:startColor="#e2da55" android:endColor="#ffffff"/>
				</shape>
			</item>
		</layer-list>
	</item>
</selector>